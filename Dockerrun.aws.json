{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "bktgm/multi-client",
            "hostname": "client",
            "essentials": false ,
            "memory" : 500
        },

        {
            "name":"server",
            "image":"bktgm/multi-server",
            "hostname":"a500pi",
            "essentials":false,
            "memory" : 500

        },

        {
            "name":"worker",
            "image": "bktgm/multi-worker",
            "hostname": "worker",
            "essentials":false,
            "memory" : 500

        },

        {
            "name":"nginx",
            "image":"bktgm/multi-nginx",
            "hostname":"nginx",
            "essentials":true,
            "portMapping": [
                {
                    "hostport":80,
                    "containerPort":80
                }
            ],

            "links": ["client", "server"],
            "memory" : 500

        }

    ]
}